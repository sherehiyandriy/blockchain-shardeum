{
  "name": "shardeum",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/index.js",
  "scripts": {
    "pm2": "cross-env PM2_HOME='./.pm2' pm2",
    "start": "node scripts/start.js && node dist/src/index.js",
    "stop": "node scripts/stop.js",
    "clean": "node scripts/clean.js",
    "check": "gts check",
    "compile": "tsc -p .",
    "fix": "gts fix",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "prepare": "npm run compile",
    "pretest": "npm run compile",
    "posttest": "",
    "dbg": "shardus start 3 && shardus stop && rm -rf instances/",
    "test": "jest --detectOpenHandles --useStderr --coverage",
    "test:shardedNet": "cross-env minNodes=20 nodesPerConsensusGroup=5 jest --detectOpenHandles --useStderr --coverage shardedNetwork.test.ts",
    "test:singleShardRotation": "cross-env minNodes=10 nodesPerConsensusGroup=20 NodeReward=false jest --detectOpenHandles --useStderr --coverage singleShardRotation.test.ts",
    "test:autoscaleNet": "cross-env minNodes=5 nodesPerConsensusGroup=10 maxRotatedPerCycle=0 jest --detectOpenHandles --useStderr --coverage autoScaleNet.test.ts",
    "update-template": "node scripts/update-template.js",
    "build-docker-dev": "docker build -f dev.Dockerfile -t registry.gitlab.com/shardeum/server:dev .",
    "push-docker-dev": "docker push registry.gitlab.com/shardeum/server:dev",
    "tsc": "tsc"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ethereumjs/vm": "^5.6.0",
    "@shardus/core": "^2.5.14",
    "@shardus/crypto-utils": "^4.0.4",
    "deepmerge": "^4.2.2",
    "dotenv": "^16.0.0",
    "ethereumjs-util": "^7.1.3",
    "ethereumjs-wallet": "^1.0.2",
    "fast-stable-stringify": "^1.0.0",
    "got": "^9.6.0",
    "gts": "^3.1.0",
    "typescript": "^4.5.2",
    "vorpal": "^1.12.0"
  },
  "devDependencies": {
    "@shardus/archiver": "^3.2.5",
    "@shardus/monitor-server": "^2.0.5",
    "@types/decimal.js": "^7.4.0",
    "@types/express": "^4.17.2",
    "@types/heapdump": "^0.3.1",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.20.4",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "axios": "^0.21.1",
    "cross-env": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "execa": "^4.0.1",
    "hygen-create": "^0.2.1",
    "jest": "^26.6.3",
    "pm2": "^4.1.2",
    "prettier": "^1.19.1",
    "shardus": "^4.2.0",
    "shelljs": "^0.8.4",
    "standard": "^12.0.1",
    "ts-jest": "^26.5.2",
    "yarpm": "^0.2.1"
  }
}
